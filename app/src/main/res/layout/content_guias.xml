<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.point.adsep.Guias"
    tools:showIn="@layout/app_bar_guias"
    android:background="@drawable/side_nav_bar">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv1"
        android:src="@mipmap/pdficon"
        android:onClick="onclickPdf"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Matematicas"
        android:id="@+id/textView2"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:layout_below="@+id/iv1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv2"
        android:src="@mipmap/pdficon"
        android:onClick="onclickPdf"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/iv1"
        android:layout_alignStart="@+id/iv1"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Android"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/iv2"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv3"
        android:layout_marginTop="37dp"
        android:src="@mipmap/pdficon"
        android:onClick="onclickPdf"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/iv2"
        android:layout_alignStart="@+id/iv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Base de Datos"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:id="@+id/textView8"
        android:layout_below="@+id/iv3"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
